 public string urlCSV;
    public string[,] data;

    public Text text;

    // Start is called before the first frame update
    void Start()
    {
        StartCoroutine(GetText());
    }
    //https://www.docs.google.com/spreadsheets/d/e/2PACX-1vRUFibb3eoYOHHdLiSnC7j1CYL7nN38nNtPNk9LVBPaZNnaOHDDjMNI03IWYTttmoNWOgWfjt-Yd5P_/pub?output=csv

    IEnumerator GetText()
    {
        UnityWebRequest www =UnityWebRequest.Get(urlCSV);
        www.SetRequestHeader("X-Requested-With", "XMLHttpRequest");
        www.SetRequestHeader("Access-Control-Allow-Credentials", "true");
        www.SetRequestHeader("Access-Control-Allow-Headers", "Accept, X-Access-Token, X-Application-Name, X-Request-Sent-Time");
        www.SetRequestHeader("Access-Control-Allow-Methods", "GET, POST, OPTIONS"); 
        www.SetRequestHeader("Access-Control-Allow-Origin", "*");


        yield return www.SendWebRequest();

        if (www.isNetworkError || www.isHttpError)
        {
            Debug.Log(www.error);
        }
        else
        {
            //cargamos el csv en forma de string
            string dataCSV = www.downloadHandler.text;

            //creamos un array temporal donde cargarmenos los datos del csv separados por saltos de lines
            //con esto tendremos el número de de filas de la array bidimensional
            string[] tempStr;
            tempStr = dataCSV.Split('\n');

            //recorremos cada elemento y del array separado por saltos de linea y separamos cada elemento por comas
            //asi tendremos el cumero de columnas del array bidimensional
            for (int i = 0; i < tempStr.Length; i++)
            {
                string[] auxStr;
                auxStr = tempStr[i].Split(',');

                //la primera linea tendrá el valor de los elementos, por tanto se aprobecha esta para delimitar las dimensiones de las columnas del array
                if (i == 0)
                {
                    data = new string[tempStr.Length, auxStr.Length];
                }

                //cargamos cada elemento en su fila y colmna correspondiente 
                for (int j = 0; j < auxStr.Length; j++)
                {
                    data[i, j] = auxStr[j];
                    text.text += data[i, j] +"\n";
                }

            }
        }

        
    }
